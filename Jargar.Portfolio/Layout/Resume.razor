@using Jargar.Portfolio.Data


<Jargar.Portfolio.Components.GradientHeadlineSeparator HeadLine="Experience" />

<MudGrid>

    @foreach (var job in jobExperiences)
    {
        <MudItem xs="12" md="6">
            <MudPaper Class="pa-4">
                <MudStack Justify="Justify.SpaceBetween" Row=true>
                    <MudText Typo="Typo.h5" Color="Color.Primary">@job.Title</MudText>
                    <MudText Typo="Typo.body2">@job.Period</MudText>
                </MudStack>

                <MudText Typo="Typo.h6" Color="Color.Primary">@job.Company, @job.Location</MudText>

                <MudText>@job.Description</MudText>

                @if (job.Achievements.Any())
                {
                    <MudList>
                        @foreach (var achievement in job.Achievements)
                        {
                            <MudListItem Icon="@Icons.Material.Filled.Circle" IconSize="Size.Small">
                                @achievement
                            </MudListItem>
                        }
                    </MudList>
                }
            </MudPaper>
        </MudItem>
    }

</MudGrid>

@code {
    private List<JobExperience> jobExperiences;

    public Resume()
    {
        jobExperiences = ResumeData.GetJobExperiences();
    }
}